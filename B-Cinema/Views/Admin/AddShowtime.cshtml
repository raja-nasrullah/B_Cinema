@model BookingCinema.Models.Showtime

<h2>Add New Showtime</h2>

<form asp-action="AddShowtime" method="post">
    <div class="form-group">
        <label>Select Movie</label>
        <select asp-for="MovieId" class="form-control" asp-items="@(new SelectList(ViewBag.Movies, "Id", "Title"))">
            <option value="">-- Select Movie --</option>
        </select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label>Show Date</label>
        <input asp-for="MovieDate" type="date" class="form-control" />
        <span asp-validation-for="MovieDate" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label>Show Time</label>
        <input asp-for="MovieTime" type="time" class="form-control" />
        <span asp-validation-for="MovieTime" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">Save Showtime</button>
        <a asp-action="AllShowtimes" class="btn btn-secondary">Cancel</a>
    </div>
</form>