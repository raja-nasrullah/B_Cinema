@model IEnumerable<BookingCinema.Models.Ticket>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "All Tickets";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-0"><i class="bi bi-ticket-perforated"></i> Cinema Tickets</h2>
            @if (Context.Session.GetString("UserRole") == "Admin")
            {
                <small class="text-muted">Admin Control Panel: @Model.Count() total records</small>
            }
        </div>

        <a asp-controller="Admin" asp-action="AddTicket" class="btn btn-success shadow-sm">
            <i class="fas fa-plus-circle"></i> Create New Ticket
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            @* p-0 makes the table flush with card edges *@
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4">Ticket No.</th>
                        <th>User</th>
                        <th>Movie</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Issued At</th>
                        <th class="text-center pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-uppercase ps-4">@item.TicketNumber</td>
                            <td>@item.User?.Name</td>
                            <td>@item.Movie?.Title</td>
                            <td>@item.Showtime?.MovieDate.ToShortDateString()</td>
                            <td>@item.Showtime?.MovieTime.ToString(@"hh\:mm")</td>
                            <td>@item.IssuedAt.ToString("g")</td>
                            <td class="text-center pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Admin" asp-action="EditTicket" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>

                                    <a asp-controller="Admin" asp-action="TicketDetail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>

                                    @if (Context.Session.GetString("UserRole") == "Admin")
                                    {
                                        <form asp-controller="Admin" asp-action="DeleteTicket" asp-route-id="@item.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Are you sure you want to permanently delete ticket @item.TicketNumber?')">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>