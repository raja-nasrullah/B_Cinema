@model BookingCinema.Models.User
@{
    ViewData["Title"] = "Add User";
}

<h2>Add User</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="AddUser" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <div class="mb-3">
        <label>Password</label>
        <input asp-for="Password" class="form-control" type="password" required />
    </div>

    <div class="mb-3">
        <label>Role</label>
        <select asp-for="Role" class="form-control" asp-items="new SelectList(ViewBag.Roles)" required>
            <option value="">--Select Role--</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Add User</button>
    <a asp-action="AllUsers" class="btn btn-secondary ms-2">Back to Users</a>
</form>
