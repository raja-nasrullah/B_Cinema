@model IEnumerable<IGrouping<int, BookingCinema.Models.Showtime>>

@{
    ViewData["Title"] = "Showtime Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Movie Schedules</h2>
        <a asp-action="AddShowtime" class="btn btn-primary">+ Add New Time Slot</a>
    </div>

    <table class="table table-hover border">
        <thead class="table-dark">
            <tr>
                <th>Movie Title</th>
                <th>Scheduled Dates & Times</th>
                <th class="text-center">Total Slots</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model)
            {
                var firstShow = group.First();
                <tr>
                    <td class="align-middle">
                        <strong>@firstShow.Movie?.Title</strong>
                    </td>
                    <td>
                        @foreach (var timeSlot in group.OrderBy(t => t.MovieDate).ThenBy(t => t.MovieTime))
                        {
                            <div class="btn-group m-1" role="group">
                                <span class="btn btn-sm btn-outline-dark disabled">
                                    @timeSlot.MovieDate.ToString("MMM dd") at @timeSlot.MovieTime.ToString(@"hh\:mm")
                                </span>
                                <a asp-action="EditShowtime" asp-route-id="@timeSlot.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="DeleteShowtime" asp-route-id="@timeSlot.Id" method="post" onsubmit="return confirm('Delete this specific slot?');" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">×</button>
                                </form>
                            </div>
                        }
                    </td>
                    <td class="text-center align-middle">
                        <span class="badge bg-info text-dark">@group.Count() Slots</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>