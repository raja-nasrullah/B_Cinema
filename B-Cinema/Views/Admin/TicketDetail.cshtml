@model BookingCinema.Models.Ticket

@{
    ViewData["Title"] = "Ticket Detail";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="ticket-container shadow-lg d-flex">

                <div class="ticket-stub bg-danger text-white p-4 d-flex flex-column justify-content-between text-center">
                    <div>
                        <i class="fas fa-film fa-3x mb-2"></i>
                        <h5 class="fw-bold">ADMIT ONE</h5>
                    </div>
                    <div class="ticket-number-vertical">
                        <small># @Model.TicketNumber</small>
                    </div>
                    <p class="small m-0">Cinema Admin</p>
                </div>

                <div class="ticket-body bg-white p-4 flex-grow-1 position-relative">
                    <div class="perforation"></div>

                    <div class="d-flex justify-content-between align-items-start">
                        <h2 class="text-dark fw-bold m-0">@Model.Movie?.Title</h2>
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=80x80&data=@Model.TicketNumber"
                             alt="QR Code" class="img-thumbnail" style="width: 80px;" />
                    </div>

                    <p class="text-muted border-bottom pb-2">Electronic Ticket Receipt</p>

                    <div class="row mt-4">
                        <div class="col-6 mb-3">
                            <label class="text-muted d-block small uppercase">Customer</label>
                            <span class="text-dark fw-bold">@Model.User?.Name</span>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="text-muted d-block small uppercase">Date</label>
                            <span class="text-dark fw-bold">@Model.Showtime?.MovieDate.ToLongDateString()</span>
                        </div>
                        <div class="col-6">
                            <label class="text-muted d-block small uppercase">Showtime</label>
                            <span class="text-dark fw-bold">@Model.Showtime?.MovieTime.ToString(@"hh\:mm")</span>
                        </div>
                        <div class="col-6">
                            <label class="text-muted d-block small uppercase">Price</label>
                            <span class="text-success fw-bold">$@Model.Movie?.Price</span>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top d-flex justify-content-between">
                        <button onclick="window.print()" class="btn btn-sm btn-dark">
                            <i class="fas fa-print"></i> Print
                        </button>
                        <a asp-action="AllTickets" class="btn btn-sm btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .ticket-container {
        border-radius: 15px;
        overflow: hidden;
        min-height: 300px;
    }
    .ticket-stub {
        width: 120px;
        border-right: 2px dashed rgba(255,255,255,0.3);
    }
    .ticket-number-vertical {
        transform: rotate(-90deg);
        font-weight: bold;
        letter-spacing: 2px;
    }
    .ticket-body {
        border-radius: 0 15px 15px 0;
    }
    .perforation {
        position: absolute;
        left: -10px;
        top: 0;
        bottom: 0;
        width: 20px;
        background-image: radial-gradient(circle, transparent 70%, #fff 70%);
        background-size: 20px 20px;
    }
    .uppercase { text-transform: uppercase; font-size: 10px; font-weight: bold; }

    @@media print {
        .btn, nav, footer { display: none !important; }
        .ticket-container { box-shadow: none !important; border: 1px solid #000; }
    }
</style>